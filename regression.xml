<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression">
    <test name="All Functionalities">
        <classes>
            <class name="scripts.TechGlobalLoginFormCardTest">
                <methods>
                    <include name="validateLoginFormCard"/>
                    <include name="validateLoginWithValidCredentials"/>
                    <include name="validateLoginWithValidCredentialsAndThanLogout"/>
                    <include name="validateLoginWithWrongUsername"/>
                    <include name="validateLoginWithValidUsernameAndInvalidPassword"/>
                    <include name="validateLoginWithInvalidCredentials"/>
                </methods>
            </class>
            <class name="scripts.TechGlobalResetPasswordTest">
                <methods>
                    <include name="validateForgotPasswordLink"/>
                    <include name="validateResetPasswordLink"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>